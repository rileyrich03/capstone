{
  "manifest_version": 3,
  "name": "TwoWrongs",
  "description": "Blacklist any distracting site to discourage its use through forced visual & audio pop-ups, scrolling, cursor, and media interferences, and much more.",
  "version": "3.0",
  "icons": {
    "128": "icon128.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "scripting"
  ],
  "background": {
    "service_worker": "backgroundTask.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon128.png"
  },
  "web_accessible_resources": [{
    "resources": ["cursor.png", "thwomp.mp3","spam0.html", "spam1.html","spam2.html"],
    "matches": ["<all_urls>"]
  }]
}
